<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:focusable="true"
	android:focusableInTouchMode="true">

	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:orientation="vertical"
		android:padding="5dp">

		<com.yzrilyzr.ui.myTextViewTitle
			android:layout_height="wrap_content"
			android:text="界面颜色"
			android:layout_width="360dp"/>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="5px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="主要颜色"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myColorView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:id="@+id/windowuisettingsmyColorView1"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="1px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="背景颜色"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myColorView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:id="@+id/windowuisettingsmyColorView2"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="1px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="控件选定颜色"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myColorView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:id="@+id/windowuisettingsmyColorView3"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="1px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="控件禁用颜色"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myColorView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:id="@+id/windowuisettingsmyColorView4"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="1px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="控件默认颜色"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myColorView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:id="@+id/windowuisettingsmyColorView5"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="1px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="按钮颜色"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myColorView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:id="@+id/windowuisettingsmyColorView6"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myTextViewTitle
			android:layout_height="wrap_content"
			android:text="文字显示"
			android:layout_width="match_parent"
			android:layout_marginTop="40dp"/>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="5px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="前景色"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myColorView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:id="@+id/windowuisettingsmyColorView7"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="1px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="背景色"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myColorView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:id="@+id/windowuisettingsmyColorView8"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="1px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="使用内置字体"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.mySwitch
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:src="@android:drawable/ic_delete"
				android:id="@+id/windowuisettingsmySwitch1"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="1px"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="文字大小"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myEditText
				android:layout_height="40dp"
				android:layout_width="80dp"
				android:inputType="number"
				android:gravity="center"
				android:id="@+id/windowuisettingsmyEditText1"/>

		</LinearLayout>

		<com.yzrilyzr.ui.myTextViewTitle
			android:layout_height="wrap_content"
			android:text="其他显示设置"
			android:layout_width="match_parent"
			android:layout_marginTop="40dp"/>

		<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="5px"
			android:layout_width="match_parent"/>

		

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="圆角大小"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.ui.myEditText
				android:layout_height="40dp"
				android:layout_width="80dp"
				android:inputType="number"
				android:gravity="center"
				android:id="@+id/windowuisettingsmyEditText4"/>

		</LinearLayout>
<com.yzrilyzr.ui.myLinearLayout
			android:layout_height="1px"
			android:layout_width="match_parent"/>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="left|center"
			android:padding="5dp"
			android:clickable="true"
			android:id="@+id/windowuisettingsLinearLayout1">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:text="DPI"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<com.yzrilyzr.icondesigner.VecView
				android:layout_height="20dp"
				vec="forward"
				android:layout_width="20dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"/>

		</LinearLayout>

	</LinearLayout>

</ScrollView>

