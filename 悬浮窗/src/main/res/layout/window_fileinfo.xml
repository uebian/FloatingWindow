<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="left|center"
		android:padding="5dp">

		<ImageView
			android:layout_height="35dp"
			android:layout_width="35dp"
			android:id="@+id/windowfileinfoImageView1"/>

		<com.yzrilyzr.ui.myEditText
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:maxLines="3"
			android:layout_marginLeft="5dp"
			android:layout_weight="1.0"
			android:id="@+id/windowfileinfomyEditText1"/>

	</LinearLayout>

	<com.yzrilyzr.ui.myLinearLayout
		android:layout_height="1px"
		android:layout_width="match_parent"/>

	<com.yzrilyzr.ui.myTextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="类型:"
		android:layout_margin="5dp"/>

	<com.yzrilyzr.ui.myTextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="路径:"
		android:layout_margin="5dp"/>

	<com.yzrilyzr.ui.myTextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="包含:"
		android:layout_margin="5dp"
		android:visibility="gone"/>
	<com.yzrilyzr.ui.myLinearLayout
		android:layout_height="1px"
		android:layout_width="match_parent"/>
	<com.yzrilyzr.ui.myTextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="大小:"
		android:layout_margin="5dp"/>

	

	<com.yzrilyzr.ui.myTextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="创建时间:"
		android:layout_margin="5dp"/>

	<com.yzrilyzr.ui.myLinearLayout
		android:layout_height="1px"
		android:layout_width="match_parent"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_margin="5dp"
			android:layout_weight="1.0">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="可读"
				android:layout_margin="5dp"/>

			<com.yzrilyzr.ui.myCheckBox
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/windowfileinfomyCheckBox1"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_margin="5dp"
			android:layout_weight="1.0">

			<com.yzrilyzr.ui.myTextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="可写"
				android:layout_margin="5dp"/>

			<com.yzrilyzr.ui.myCheckBox
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/windowfileinfomyCheckBox2"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

