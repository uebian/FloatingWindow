<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<SurfaceView
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:id="@+id/windowfastcamSurfaceView1"
		android:layout_gravity="center"/>

	<com.yzrilyzr.ui.myFab
		android:layout_height="40dp"
		android:layout_width="40dp"
		vec="settings"
		android:layout_gravity="bottom|left"
		android:layout_margin="10dp"
		android:id="@+id/windowfastcammyFab2"/>

	<com.yzrilyzr.ui.myFab
		android:layout_height="40dp"
		android:layout_width="40dp"
		vec="flashlightoff"
		android:layout_gravity="bottom|right"
		android:layout_margin="10dp"
		android:id="@+id/windowfastcammyFab3"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="vertical"
		android:layout_gravity="bottom|right"
		android:layout_marginRight="5dp"
		android:layout_marginBottom="50dp"
		android:id="@+id/windowfastcamLinearLayout2">

		<com.yzrilyzr.ui.myFab
			android:layout_height="40dp"
			android:layout_width="40dp"
			vec="flashlighton"
			android:layout_gravity="bottom|center"
			android:layout_margin="5dp"
			android:visibility="gone"/>

		<com.yzrilyzr.ui.myFab
			android:layout_height="40dp"
			android:layout_width="40dp"
			vec="flashlightauto"
			android:layout_gravity="bottom|center"
			android:layout_margin="5dp"
			android:visibility="gone"/>

		<com.yzrilyzr.ui.myFab
			android:layout_height="40dp"
			android:layout_width="40dp"
			vec="flashlightoff"
			android:layout_gravity="bottom|center"
			android:layout_margin="5dp"
			android:visibility="gone"/>

	</LinearLayout>

	<com.yzrilyzr.ui.myFab
		android:layout_height="50dp"
		android:layout_width="50dp"
		vec="fastcam"
		android:layout_gravity="bottom|center"
		android:layout_margin="10dp"
		android:id="@+id/windowfastcammyFab1"/>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:padding="40dp"
		android:background="#80000000"
		android:visibility="gone">

		<ExpandableListView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/windowfastcamExpandableListView1"/>

	</LinearLayout>

</FrameLayout>

