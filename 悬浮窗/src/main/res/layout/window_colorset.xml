<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center"
	android:padding="10dp">

	<com.yzrilyzr.ui.mySeekBar
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/layoutcolorsetSeekBar1"/>

	<com.yzrilyzr.ui.mySeekBar
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/layoutcolorsetSeekBar2"/>

	<com.yzrilyzr.ui.mySeekBar
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/layoutcolorsetSeekBar3"/>

	<com.yzrilyzr.ui.mySeekBar
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/layoutcolorsetSeekBar4"/>

	<com.yzrilyzr.ui.myEditText
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:maxLines="1"
		android:id="@+id/layoutcolorsetEditText1"/>

	<com.yzrilyzr.ui.myTextView
		android:layout_height="wrap_content"
		android:text="点击颜色进行设置"
		android:layout_width="match_parent"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center">

		<com.yzrilyzr.ui.myColorView
			android:layout_height="40dp"
			android:layout_width="wrap_content"
			android:layout_weight="1.0"
			android:id="@+id/layoutcolorsetImageView4"/>

		<com.yzrilyzr.ui.myTextView
			android:layout_height="wrap_content"
			android:text="→"
			android:layout_width="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"/>

		<com.yzrilyzr.ui.myColorView
			android:layout_height="40dp"
			android:layout_width="wrap_content"
			android:layout_weight="1.0"
			android:id="@+id/layoutcolorsetImageView5"/>

	</LinearLayout>

</LinearLayout>

